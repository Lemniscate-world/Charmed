{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Charmed",
  "version": "0.1.0",
  "identifier": "com.kuro.charmed",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Charmed - Spotify Alarm Clock",
        "width": 900,
        "height": 700,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Lemniscate",
    "shortDescription": "Premium Spotify Alarm Clock",
    "longDescription": "A modern, cross-platform Spotify alarm clock built with Tauri featuring a stunning glassmorphism UI.",
    "category": "Utility",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": ["en-US", "fr-FR"]
      },
      "nsis": {
        "installMode": "currentUser"
      }
    }
  },
  "plugins": {
    "updater": {
      "active": false,
      "endpoints": [],
      "pubkey": ""
    }
  }
}
